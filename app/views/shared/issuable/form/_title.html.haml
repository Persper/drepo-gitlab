- issuable = local_assigns.fetch(:issuable)
- has_wip_commits = local_assigns.fetch(:has_wip_commits)
- form = local_assigns.fetch(:form)
- no_issuable_templates = issuable_templates(issuable).empty?
- div_class = no_issuable_templates ? 'col-sm-10' : 'col-sm-7 col-lg-8'
- placeholder = Feature.enabled?(:issue_suggestions) && issuable.is_a?(Issue) ? _('What is your issue about?') : _('Title')

%div{ class: [div_class, "#{Feature.enabled?(:issue_suggestions) && !no_issuable_templates ? 'order-1' : ''}"] }
  = form.text_field :title, required: true, maxlength: 255, autofocus: true,
      autocomplete: 'off', class: 'form-control pad qa-issuable-form-title', placeholder: placeholder

  - if issuable.respond_to?(:work_in_progress?)
    .form-text.text-muted
      .js-wip-explanation
        %a.js-toggle-wip{ href: '', tabindex: -1 }
          Remove the
          %code WIP:
          prefix from the title
        to allow this
        %strong Work In Progress
        merge request to be merged when it's ready.
      .js-no-wip-explanation
        - if has_wip_commits
          It looks like you have some WIP commits in this branch.
          %br
        %a.js-toggle-wip{ href: '', tabindex: -1 }
          Start the title with
          %code WIP:
        to prevent a
        %strong Work In Progress
        merge request from being merged before it's ready.

  - if no_issuable_templates && can?(current_user, :push_code, issuable.project)
    = render 'shared/issuable/form/default_templates'
  
  - if Feature.enabled?(:issue_suggestions) && Feature.enabled?(:graphql)
    #js-suggestions{ data: { project_path: @project.full_path } }
