- empty_state_path = local_assigns.fetch(:empty_state_path, 'shared/empty_states/issues')

%ul.content-list.issues-list.issuable-list
  = render partial: "projects/drepo_syncs/issues/issue", collection: @issues
  - if @issues.blank?
    = render empty_state_path

- if @issues.present?
  = paginate @issues, theme: "gitlab", total_pages: @total_pages, params: {tab: 'issues'}
